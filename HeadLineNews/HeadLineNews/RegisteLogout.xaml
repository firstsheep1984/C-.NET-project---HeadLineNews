            <Label Content="User Name:" HorizontalAlignment="Left" Margin="50,81,0,0" VerticalAlignment="Top" Height="37" Width="122" Grid.ColumnSpan="2"/>
            <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="36" Margin="20.185,71,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="193" Grid.Column="1"/>
            <Button x:Name="btnCancel"  Content="Cancel" IsCancel="True" HorizontalAlignment="Left" Margin="30,318,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="0.093,-0.406"/>
            <Button x:Name="btnUpdate"  Content="Update" HorizontalAlignment="Left" Margin="7.185,318,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="0.093,-0.406" Click="BtnUpdate_Click" Grid.Column="1"/>

        </Grid>

    </Grid>
</Window>
