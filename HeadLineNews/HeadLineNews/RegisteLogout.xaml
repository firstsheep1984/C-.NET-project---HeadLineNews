            <Label Content="Password:" HorizontalAlignment="Left" Margin="50,182,0,0" VerticalAlignment="Top" Height="37" Width="122" Grid.ColumnSpan="2"/>
            <PasswordBox Name="pwdPswOne" HorizontalAlignment="Left" Margin="20.185,182,0,0" VerticalAlignment="Top" Width="193" Grid.Column="1"/>
            <materialDesign:PackIcon Kind="Key" RenderTransformOrigin="2.5,1.875" Margin="29,186,0,0" />
            <Button Name="btnLogout" Click="Logout_ButtonClick" Content="Logout" HorizontalAlignment="Left" Margin="147.185,318,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="0.093,-0.406" Grid.Column="1"/>
            <Label Name="lbMessage"  HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="1.605,1.962" Margin="28,24,0,0" Width="320" Grid.ColumnSpan="2"/>
            <Label Content="comform Password:" HorizontalAlignment="Left" Margin="50,234,0,0" VerticalAlignment="Top" Height="37" Width="122" Grid.ColumnSpan="2"/>
            <PasswordBox x:Name="pwdPswTwo" HorizontalAlignment="Left" Margin="20.185,234,0,0" VerticalAlignment="Top" Width="193" Grid.Column="1"/>
            <materialDesign:PackIcon Kind="Key" RenderTransformOrigin="2.5,1.875" Margin="29,238,0,0" />
